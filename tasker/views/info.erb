<html>
<head>
	<title>Kraken Tasker Info</title>
	<style type="text/css">
		td, th {
			border: 1px solid #ddd;
			padding: 2px 8px;
		}
	</style>
</head>
<body>
	<h2>Kraken Tasker Info</h2>
	<p><%= @task_info %></p>
	<p><strong>Workers:</strong></p>

	<table>
		<tr>
			<th>IP</th>
			<th>Requested</th>
			<th>Completed</th>
			<th>Last Request</th>
		</tr>
		<% @workers.each do |w| %>
			<tr>
				<td><%= w.ip %></td>
				<td><%= w.requested %></td>
				<td><%= w.completed %></td>
				<td><%= w.last_request.in_time_zone("Pacific Time (US & Canada)").strftime("%l:%M %p") %> Pacific</td>
			</tr>
		<% end %>
	</table>
</body>
</html>